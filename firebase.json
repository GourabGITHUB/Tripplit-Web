{
  "hosting": {
    "public": "Public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/Content/**",
        "destination": "/Content/:1"
      }
    ],
    "headers": [
      {
        "source": "/sitemap-v2.xml",
        "headers": [
          { "key": "Cache-Control", "value": "no-cache" },
          { "key": "Content-Type", "value": "application/xml" }
        ]
      },
      {
        "source": "**/*.md",
        "headers": [
          { "key": "Content-Type", "value": "text/plain; charset=utf-8" },
          { "key": "Cache-Control", "value": "no-cache" }
        ]
      }
    ]
  }
}

